            <corners android:radius="1dip" />
            <solid android:color="#FFA0A0A0"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <gradient
