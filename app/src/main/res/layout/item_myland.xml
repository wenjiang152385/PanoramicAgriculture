<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fr_myland"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/transparent_oval"

        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_myland_simple_drawee_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"

        >


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:id="@+id/ll_land"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_farm_feild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农作物名称"
                android:id="@+id/tv_crops"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>


        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:layout_marginTop="@dimen/activity_vertical_margin1"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/tv_progress"
            />
        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="3dp"
            android:max="100"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/pr_2"
            android:progressDrawable="@drawable/progress_color"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:layout_marginTop="@dimen/gridview_text"
                android:id="@+id/id_num"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_width="75dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="11"
                android:paddingBottom="2dp"
                android:background="@drawable/transparent"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />




        </LinearLayout>



    </LinearLayout>
    </LinearLayout>
</FrameLayout>