<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE2E2E2"
        android:orientation="horizontal">

        <com.oraro.panoramicagriculture.ui.view.MyButtonView
            android:id="@+id/id_btn_need"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF20CEB4"
            android:text="需求" />

        <com.oraro.panoramicagriculture.ui.view.MyButtonView
            android:id="@+id/id_btn_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="销售" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f9f9f9"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioGroup android:id="@+id/id_radioGroup"
            android:contentDescription=""
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/id_today"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@drawable/s_radio_button"
                android:drawablePadding="5dp"
                android:button="@null"
                android:text="今天"
                android:textSize="11sp"
                android:textColor="#333333"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/id_yesterday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@drawable/s_radio_button"
                android:drawablePadding="5dp"
                android:button="@null"
                android:text="昨天"
                android:textSize="11sp"
                android:textColor="#333333"/>
            <RadioButton
                android:id="@+id/id_threedaysago"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@drawable/s_radio_button"
                android:drawablePadding="5dp"
                android:button="@null"
                android:text="前天"
                android:textSize="11sp"
                android:textColor="#333333"/>
            <RadioButton
                android:id="@+id/id_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@drawable/s_radio_button"
                android:drawablePadding="5dp"
                android:button="@null"
                android:text="更多"
                android:textSize="11sp"
                android:textColor="#333333"/>
