<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"></FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="96">

        <LinearLayout
            android:id="@+id/id_bottomlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/point_main_shape_edit_bottom"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/btn_detail_editneed"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:textColor="#fdeee9"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#00000000"
                android:text="编\n辑"/>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/btn_detail_cancel"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#00000000"
                android:textColor="#fdeee9"
                android:textSize="18sp"
                android:text="删\n除"/>

            <TextView
                android:id="@+id/btn_detail_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="@string/farm_detail_list_title7"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/point_main_shape_bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/point_main_shape_top"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/id_tdbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土地名称"
                    android:layout_marginLeft="15dp"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="6122222222222"
                    android:textColor="#2A2A2A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/cropsimage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@mipmap/default_yumi"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vfCrops_byname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有机八角（茴香）"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/num1_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="需求数量："
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/num1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="2.0"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/num2_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textStyle="bold"
                            android:text="种植基地："
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/num2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="闸门呼吸"
                            android:textColor="#000000"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time1_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需求时间："
                            android:textColor="#7f7f7f"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017.12.30"
                            android:textColor="#7f7f7f"
                            android:textSize="11sp" />


                        <!--<TextView-->
                            <!--android:id="@+id/time2_type"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:text="预期收获时间："-->
                            <!--android:textColor="#7f7f7f"-->
                            <!--android:textSize="11sp" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/time2"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="2017.12.30"-->
                            <!--android:textColor="#7f7f7f"-->
                            <!--android:textSize="11sp" />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"></FrameLayout>
</LinearLayout>

